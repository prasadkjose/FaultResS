                      <td class="column2">  {{category}}</td>
                      <td class="column3">{{Line}}</td>
                      <td class="column3">{{LineNo}}</td>

                     
                      <td class="column5" style="color:{{color}};">{{status}}</td>
                      <td class="column6">{{toa}}</td>
                      <td class="column6">{{toc}}</td>
                      <td class="column6">{{tech}}</td>




                    </tr>

