      <div class="page-top-form col-md-3 c  ">
        <form method="post" action="/date">
          <p1>Enter Fault Date</p1>

          <input type="date" class="page-top-input"   placeholder="Enter Date" name="date" />
          <input type="submit" class="date-submit btn btn-default" value="Submit">
        </form>
      </div>
      <div class="page-top-form col-md-3">
        <form method="post" action="/tech">
          <p1>Enter Technician Name</p1>

          <input type="text" class="page-top-input"   placeholder="Ex John" name="technician" />
          <input type="submit" class="date-submit btn btn-default" value="Submit">
        </form>
      </div>
      <div class="page-top-form col-md-3">
        <form method="post" action="/line">
          <p1>Enter Line</p1>

          <input type="text" class="page-top-input"   placeholder="Ex Filter1" name="line" />
